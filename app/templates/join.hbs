<form id="main-form" class="index right" {{action 'submit' on='submit'}}>
  {{#if errors.length}}
  <ul class='errors'>
    {{#each errors}}
      <li class='error'>{{this}}</li>
    {{/each}}
  </ul>
  {{/if}}
  <div class="row">
    <div class="header">Email</div>
    <div class="contents">
      {{input type='email' value=email}}
    </div>
  </div>
  <div class="row">
    <div class="header">Full Name</div>
    <div class="contents">
      {{input value=fullName}}
    </div>
  </div>
  <div class="row">
    <div class="header">Password</div>
    <div class="contents">
      {{input type='password' value=password}}
    </div>
  </div>
  <div class="row">
    <div class="header">Confirmation</div>
    <div class="contents">
      {{input type='password' value=passwordConfirmation}}
    </div>
  </div>
  {{#if controller.working}}
    Working...
  {{else}}
    <input type='submit' class="cta" value='Sign up'>
  {{/if}}
</form>
<div class="main-inside-container right">
  <h3>Sign up</h3>
  <p>
    Earn reputation for your team, fundraise for events, and connect with South Asian students from all around America.
  </p>
  <p class="small muted">Learn <a href="n/how-to-sign-up">how to register</a>.</p>
</div>