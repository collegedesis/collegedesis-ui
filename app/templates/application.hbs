{{partial 'header'}}

<div class="outer-page">
  <div class="page">
    <div class="messages">
      {{#if currentUser}}
        {{#unless currentUser.approved}}
          <p class="error">Get your profile approved by registering a membership with one of the {{numOfOrganizations}} organizations in our {{#link-to 'directory'}}directory{{/link-to}}!</p>
        {{/unless}}
      {{/if}}
    </div>
    {{outlet}}
  </div>

</div>

<div class="footer">
  <ul class='footer-links'>
    <li>{{#link-to 'about'}}About{{/link-to}}</li>
    <li>{{#link-to 'faq'}}FAQ{{/link-to}}</li>
    <li>{{#link-to 'guidelines'}}Guidelines{{/link-to}}</li>
    <li>{{#link-to 'directory'}}Directory{{/link-to}}</li>
  </ul>
  <center>&copy; CollegeDesis</center>
  <div class="small muted stamp">
    <strong>Last update:</strong>{{lastBuild}}
  </div>
</div>
