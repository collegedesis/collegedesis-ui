<div class="bulletins">
{{#each savedContent}}
  <div class="bulletin-wrapper">
    <div class="title">
    {{#link-to 'news.story' this}}
      {{title}}
    {{/link-to}}
  </div>
    <div class="subtext">
      {{hostName}} | {{#if authorIsOrganization}}
        {{#link-to 'directory.show' author}}{{author.name}}{{/link-to}}
      {{/if}}
      {{#if authorIsUser}}{{author.fullName}}{{/if}}
    </div>
  </div>
{{/each}}
</div>